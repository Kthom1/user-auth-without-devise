<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center">Log in</h2>
      <%= bootstrap_form_tag url:'/login' do |f| %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <%= submit_tag "Submit" %>
      <% end %>      
    </div>
  </div> 
</div>