<h1>Profile</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h2 class="text-center">Edit Info</h2>
    <%= bootstrap_form_for(:user, url: '/profile', method: 'patch') do |f| %>
      Name: <%= f.text_field :name, :value => @current_user.name  %>
      Email: <%= f.text_field :email, :disabled => true, :value => @current_user.email %>
      Password: <%= f.password_field :password %>
      Password Confirmation: <%= f.password_field :password_confirmation %>
      <%= f.submit "Submit" %>
    <% end %>
   </div>
  </div> 
</div>